<UserControl x:Name="userControl" x:Class="Marketing.UI.Controls.PostViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
    mc:Ignorable="d" xmlns:dxre="http://schemas.devexpress.com/winfx/2008/xaml/richedit" d:DesignHeight="800" d:DesignWidth="800" SizeChanged="userControl_SizeChanged" xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars">

    <Grid x:Name="LayoutRoot" MinHeight="2000" Background="LightGray" >
        <StackPanel Orientation="Horizontal" Margin="20">
            <TextBox Name="BodyText" Width="0" Height="0" Text="{Binding Path=Value,Mode=TwoWay}" TextChanged="BodyText_TextChanged"></TextBox>
            <dxre:RichEditControl Name="richEditControl"  ActiveViewType="Simple"  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalScrollBarVisibility="Collapsed" VerticalScrollBarVisibility="Collapsed" Padding="20"></dxre:RichEditControl>
        </StackPanel>
    </Grid>
   
</UserControl>
