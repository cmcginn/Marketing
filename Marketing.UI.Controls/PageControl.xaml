<UserControl x:Class="Marketing.UI.Controls.PageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:my="clr-namespace:Marketing.UI.Controls"
    d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary x:Key="pagerStyles">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CustomDataPagerControlStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel Orientation="Horizontal">
            <my:CustomDataPagerControl x:Name="Pager" Style="{StaticResource CustomDataPagerControlStyle}" HorizontalContentAlignment="Stretch"></my:CustomDataPagerControl>
        </StackPanel>
    </Grid>
</UserControl>
